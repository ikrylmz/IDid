<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/blackLight_iv"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:scaleType="fitXY"
                android:src="@mipmap/black_ball"
                android:visibility="gone"
                app:srcCompat="@mipmap/black_ball" />

            <ImageView
                android:id="@+id/greenLight_iv"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:scaleType="fitXY"
                android:src="@mipmap/green_ball"
                android:visibility="visible"
                app:srcCompat="@mipmap/green_ball" />

            <TextView
                android:id="@+id/user_name_m_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/subject_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Subject"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/phoneNumber_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>